    justify - content: center;
    align - items: center;
    flex - wrap: wrap;
}

.navbar - menu {
    display: flex;
    align - items: center;
    gap: 20px;
    /* Añade un espacio mayor entre los elementos */
    flex - wrap: wrap;
}

.navbar - item {
    position: relative;
    flex: 1;
    /* Asegura que los botones ocupen espacio disponible */
}

.navbar - item button,
.navbar - menu > button {
    padding: 10px 20px;
    background - color: #4CAF50;
    color: white;
    border: none;
    cursor: pointer;
}

.navbar - item button: hover,
.navbar - menu > button:hover {
    background - color: #45a049;
}

.dropdown - menu {
    display: flex;
    flex - direction: column;
    position: absolute;
    top: 100 %;
    left: 0;
    background - color: #f9f9f9;
