// src/NavBar.js
import React from 'react';
import './NavBar.css'; // Asegúrate de que este CSS existe y está vinculado correctamente
// (Si no tienes NavBar.css, puedes mover sus estilos a App.css o crearlo)

function NavBar({ onAddRecipe, onToggleSidebar, isSidebarVisible }) {
  return (
    <div className="nav-container">
      {/* Botón para ocultar/mostrar el menú lateral */}
      <button onClick={onToggleSidebar}>
        {isSidebarVisible ? 'Ocultar Menú' : 'Mostrar Menú'}
      </button>

      {/* Otros botones de navegación */}
      <button onClick={onAddRecipe}>Añadir Receta</button>
      <button onClick={() => console.log('Filtrar Desayuno')}>Desayuno</button>
      <button onClick={() => console.log('Filtrar Almuerzo')}>Almuerzo</button>
      <button onClick={() => console.log('Filtrar Cena')}>Cena</button>
      <button onClick={() => console.log('Filtrar Postre')}>Postre</button>
    </div>
  );
}

export default NavBar;


